<nav class="navbar navbar-light navbar-dark bg-success">
  <a class="navbar-brand"  href="#">ユーザー詳細画面</a>
</nav>

<div class="container mt-5 p-lg-5 bg-light">
<%= form_for @user do |f| %>

  <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
         <%= f.label :username, "ユーザー名", class: "label" %>
          <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
  </div>  

  <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
        <%= f.label :email, "メールアドレス", class: "label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>  

  <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
          <%= f.label :profile, "プロフィール", class: "label" %>
          <%= f.text_area :profile, class: "form-control" %>
      </div>
    </div>
  </div>  

  <div class="container">
    <div class="form-group row">
      <div class="col-md-8">
          <%= f.label :profile_image, "プロフィール画像", class: "label" %>
          <%= f.attachment_field :profile_image, class: "form-control" %>
      </div>
    </div>
  </div>   
  
  <div class="container mt-5">
    <div class="col-md-4 align-self-center">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  </div>  

<% end %>
</div>