<nav class="navbar navbar-light navbar-dark bg-success">
  <a class="navbar-brand"  href="#">ユーザー一覧</a>
</nav>

 
<div class="row">
  <% @users.each do |user| %>
  <div class="col-sm-3">
      <div class="card m-3">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "card-img", width: "100%", height: "400"  %>
      <% end %>
      <div class="card-body">
        <h3 class="card-title"><%=link_to user.username, user_path(user) %></h3>
        <p class="card-text"><%= user.profile %></p>
      </div>   
    </div>
  </div>
  <% end %>
</div>
